<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <Deterministic>true</Deterministic>
    <OutputPath>$(MSBuildThisFileDirectory)..\bin\$(Configuration)\</OutputPath>
    <IntermediateOutputPath>obj\$(Configuration)\</IntermediateOutputPath>
	<NoWarn>$(NoWarn);NU5128</NoWarn>
  </PropertyGroup>
  
  <PropertyGroup>
    <DevelopmentDependency>true</DevelopmentDependency>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <Authors>Microsoft</Authors>
    <Owners></Owners> <!-- Do not populate this field in the package nuspec file. This should be managed on nuget.org -->
    <Copyright>© Microsoft Corporation. All rights reserved.</Copyright> <!-- Mandatory value for Nuget uploads -->
    <RepositoryUrl>https://github.com/microsoft/Microsoft.Unity.Analyzers</RepositoryUrl>
    <VersionPrefix>1.8.0</VersionPrefix>
    <PackageTags>Unity3d analyzers csharp</PackageTags>
    <Description>Roslyn analyzers for Unity game developers</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/microsoft/Microsoft.Unity.Analyzers</PackageProjectUrl>	
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)..\tools\*install.ps1" CopyToOutputDirectory="Always" />
    <Content Include="$(OutputPath)\*install.ps1" CopyToOutputDirectory="Always" PackagePath="tools" />
    <Content Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>  
  
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All"/>
    <PackageReference Include="Microsoft.SourceLink.AzureRepos.Git" Version="1.0.0" PrivateAssets="All"/>
    <PackageReference Include="MicroBuild.Core" Version="0.3.0" PrivateAssets="All"/>
  </ItemGroup>    
 
</Project>
